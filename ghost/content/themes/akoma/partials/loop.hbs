<div id="main-story-feed">

    {{! Previous/next page links - only displayed on page 2+ }}
    {{!-- <div class="extra-pagination inner">
        {{pagination}}
    </div> --}}

    {{! This is the post loop - each post will be output using this markup }}
    {{#foreach posts}}
    <div class="story {{post_class}}">
        <!--STORY TOP-->
        <div class="story-top">
            <div class="author">
                <div class="author-image" {{#if author.image}}style="background-image:url({{author.image}})"{{/if}}></div>
                <div class="byline">
                    <p>{{author}} <span>{{date timeago=true}}</span></p>
                </div>
            </div>
            <div class="recommend">
                <div class="heart"></div>
                <div class="count">23</div>
            </div>
            <div class="clear"></div>
        </div>
        <!--STORY TOP-->
        <!--END STORY BODY-->
        <div class="story-body">
            {{#if image}}
                <img src="{{image}}" />
            {{/if}}
            <h4><a href="{{url}}">{{{title}}}</a></h4>
            <p>{{{excerpt}}}</p>
            <a href="{{url}}" class="read-more">Read more</a>
        </div>
        <!--END STORY BODY-->
        <div class="story-meta">
            {{#if tags}}
                <div class="tags">
                    <p>Posted in:</p>
                    <ul>
                        {{#foreach tags}}
                            <li><a href="{{url}}" class="tag">{{name}}</a></li>
                        {{/foreach}}
                    </ul>
                </div>
            {{/if}}
            <div class="read-length">{{readTime}} min read</div>
            <div class="clear"></div>
        </div>
    </div>
    {{/foreach}}

    {{! Previous/next page links - displayed on every page }}
    {{!-- {{pagination}} --}}

</div>