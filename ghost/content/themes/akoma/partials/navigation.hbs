
<div id="relative">
	<div id="nav-background"></div>
	<!--LOGO-->
	<a href="/" id="logo"></a>
	<!--END LOGO-->
	<!--MAIN MENU-->
	<a href="#" id="menu">
		<div id="relative">
			<div class="menu-bar one"></div>
			<div class="menu-bar two"></div>
			<div class="menu-bar three"></div>
		</div>
	</a>
	<!--END MENU-->
	<!--WRITE STORY-->
		<a href="/ghost/editor" id="write-story">
			<div class="relative">
				<div id="compose-icon"></div>
				<p>Write</p>
			</div>
		</a>
	<!--END WRITE-->
	<!--BEGIN ACCOUNT DROPDOWN/LOG IN-->
		<div id="account-icon-wrapper">
			<a href="#" id="log-in">
				{{#if user.attributes.image}}
					<img class="menu-image" src="{{user.attributes.image}}" />
				{{else}}
					<div id="logged-out-icon"></div>
				{{/if}}
			</a>														

			<!--BEGIN LOGEED IN ACTIONS-->
			<div id="logged-in-actions" class="hidden">
				<ul id="logged-in-actions-list">
					{{#if isAdmin}}
						<li><a href="/ghost" class="logged-in-action">Manage Site Content<div class="manage-site-content action-icon"></div></a></li>
						<li><a href="/ghost/ssousers" class="logged-in-action">Manage Users<div class="manage-site-content action-icon"></div></a></li>
					{{/if}}
					{{#if isAuthor}}
						<li><a href="/ghost/editor" class="logged-in-action">New Story<div class="new-story action-icon"></div></a></li>
						<li><a href="/ghost/drafts" class="logged-in-action">Drafts and Stories<div class="drafts-and-stories action-icon"></div></a></li>
						<li><a href="/user/{{user.attributes.slug}}" class="logged-in-action">Profile<div class="view-profile action-icon"></div></a></li>
					{{/if}}
					<li><a href="http://eepurl.com/bqjLcT" target="_blank" class="logged-in-action">Subscribe<div class="subscribe-newsletter action-icon"></div></a></li>
					<li class="last"><a href="/auth/signout" class="logged-in-action grey-text">Sign Out<div class="sign-out action-icon"></div></a></li>
				</ul>

				<div id="close-handheld-overlay">
					<div class="relative">
						<div class="line-one"></div>
						<div class="line-two"></div>
					</div>
				</div>
			</div>
			<!--END LOGGED IN ACTIONS-->
		</div>
	<!--END ACCOUNT-->
</div>