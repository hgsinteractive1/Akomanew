{{!< default}}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}

    <div id="user-profile-wrapper">
        <div id="profile-overview">
            <div id="avatar-wrapper">
                <div id="avatar" {{#if image}}style="background-image:url({{image}})" {{else}} style="background:#ccc;" {{/if}}></div>
            </div>
            <div id="profile-summary">
                <h3>{{name}}</h3>
                <p class="overview">
                    {{#if location}} from {{location}} | {{/if}}
                    {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
                </p>
                {{#if bio}}
                    <p class="bio">{{bio}}</p>
                {{/if}}
            </div>
            <div class="clear"></div>   
        </div>
        <div id="profile-stats">
            <ul id="stats-list">
                <li>
                    <h4>Followers</h4>
                    <p class="stat">27</p>
                </li>
                <li>
                    <h4>Following</h4>
                    <p class="stat">13</p>
                </li>
                <li class="social">
                    <h4>On Social</h4>
                    <a href="#" id="on-social-twitter"></a>
                </li>
                <li class="primary-action">

