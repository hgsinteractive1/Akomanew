
<div id="manage-stories-container">
    <!--BEGIN LIFT COLUMN MANAGE LIST-->
    <div id="left-column">
        <div id="filter-selector-wrapper">
            <h3>View all stories in</h3>
            <select>
                <option value="one">one</option>
                <option value="two">two</option>
                <option value="three">three</option>
                <option value="four">four</option>
            </select>
        </div>
        {{#view "paginated-scroll-box" tagName="section" classNames="content-list-content js-content-scrollbox"}}
            <ul id="stories-list">
                {{#each post in controller itemController="posts/post" itemView="post-item-view" itemTagName="li"}}
                    <li>
                        <h4>Thousands March in Memory of Those Lost to Boko Haram</h4>
                        <div class="author">
                            <div class="author-image"></div>
                            <div class="byline">
                                <p>Timothy Johnson <span>2 hours ago</span></p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="sort-up-arrow"></div>
                        <div class="sort-down-arrow"></div>
                        <div class="is-visible"></div>
                    </li>
                {{\each}}
            </ul>
        {{\view}}
    </div>
    <!--END LEFT COLUMN MANAGE LIST-->
    <!--BEGIN RIGHT COLUMB PREVIEW-->
    <div id="right-column">
        <!--BEGIN STORY DETAIL -->
        <div id="story-detail">
            <!--STORY INTRO AREA-->
            <div id="story-intro">
                <h2>Can the in-coming government fix Nigeria's economy?</h2>
            </div>
            <!--END STORY INTRO AREA-->

            <!--INSERT MANAGE STORY ACTIONS-->
            <div id="manage-story-actions">
                <ul class="actions">
                    <li><a href="#" class="action">Edit<div class="edit-story-icon"></div></a></li>
                    <li><a href="#" class="action">Hide <div class="hide-story-icon"></div></a></li>
                    <li><a href="#" class="action">Delete<div class="delete-story-icon"></div></a></li>
                    <li class="last"><a href="#" class="action">Feature<div class="feature-story-icon"></div></a></li>

                </ul>
            </div>

            <!--END MANAGE STORY ACTIONS-->

            <!--BEGIN STORY IMAGE-->
            <div id="story-image">
                <img src="images/placeholder_story_image.jpg">
            </div>
            <!--END STORY IMAGE-->
            <!--BEGIN STORY BODY-->
            <div id="story-body">
