

<button type="button" {{action "saveWithType" "draft"}} class="btn btn-sm js-publish-button {{if view.isDangerous 'btn-red' 'btn-blue'}}">{{view.draftText}}</button>
<button type="button" {{action "saveWithType" "publish"}} class="btn btn-sm js-publish-button {{if view.isDangerous 'btn-red' 'btn-blue'}}">{{view.publishText}}</button>

{{#unless model.isNew}}
    <button type="button" {{action "openModal" "delete-post" this}} class="btn btn-sm js-publish-button btn-red">{{view.deleteText}}</button>
{{/unless}}



